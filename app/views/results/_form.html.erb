<%= form_for @result do |f| %>
    <% if @result.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@result.errors.count, "error") %> prohibited
          this result from being saved:
        </h2>
        <ul>
          <% @result.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %> 
  
    <div class="form-group">   
        <%= f.label :outcome %><br>
        <%= f.text_field :outcome, :class => 'form-control' %>
    </div>  
   
    <div class="form-group"> 
      <%= f.label :completion %><br>
      <%= f.text_field :completion, :class => 'form-control' %>
    </div>
   
    <p>
      <%= f.submit :class => "btn btn-secondary" %>
    </p>
   
  <% end %>
  