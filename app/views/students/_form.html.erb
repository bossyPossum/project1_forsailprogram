
<%= form_for @student do |f| %>
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <div class="form-group">  
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control' %>
      </div>  

      <div class="form-group">  
        <%= f.label :age %>
        <%= f.number_field :age, :required => true, :autofocus => true, :class => 'form-control' %>
      </div>  
  
      <div class="form-group">
        <label for="sel2">Enrolment </label>

      <br>
      <%= f.collection_check_boxes :program_ids, Program.all, :id, :kla %>
      
<div class="form-group"> 
        <%= f.label :image %>
        <%= f.url_field :image, :class => 'form-control' %>
      </div>


        <%= f.submit :class => "btn btn-secondary" %>
      <% end %>
    </div>
  </div>

