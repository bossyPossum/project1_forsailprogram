
<%= form_for @student do |f| %>
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <div class="form-group">  
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control' %>
      </div>  

      <div class="form-group">  
        <%= f.label :age %>
        <%= f.number_field :age, :required => true, :autofocus => true, :class => 'form-control' %>
      </div>  

      <div class="form-group">  
        <%= f.label :stage %>
        <%= f.text_field :stage,:class => 'form-control' %>
      </div>  

      <div class="form-group"> 
        <%= f.label :image %>
        <%= f.url_field :image, :class => 'form-control' %>
      </div>

        <%= f.submit :class => "btn btn-secondary" %>
      <% end %>
    </div>
  </div>