<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true %>
    <%= f.label :age %>
    <%= f.number_field :age, :required => true, :autofocus => true %>
    <%= f.label :stage %>
    <%= f.text_field :stage %>
    <%= f.label :image %>
    <%= f.url_field :image %>
  
    <%= f.submit %>
  <% end %>
