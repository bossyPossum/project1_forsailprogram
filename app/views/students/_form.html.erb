
<%= form_for @student do |f| %>
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <div class="form-group">  
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control' %>
      </div>  

      <div class="form-group">  
        <%= f.label :age %>
        <%= f.number_field :age, :required => true, :autofocus => true, :class => 'form-control' %>
      </div>  
  
      <div class="form-group">
        <label for="sel2">Enrolment (hold shift to select more than one) </label>
          <select multiple class="form-control" id="sel2">
            <option>STAGE 1 (Year 1–2) - English</option>
            <option>STAGE 1 (Years 1–2) - Mathematics</option>
            <option>STAGE 2 (Years 3–4) - English</option>
            <option>STAGE 2 (Years 3–4) - Mathematics</option>
            <option>STAGE 3 (Years 5–6) - English</option>
            <option>STAGE 3 (Years 5–6) - Mathematics</option>
          </select>
      </div>
      
<div class="form-group"> 
        <%= f.label :image %>
        <%= f.url_field :image, :class => 'form-control' %>
      </div>


        <%= f.submit :class => "btn btn-secondary" %>
      <% end %>
    </div>
  </div>