<div class="row">
  <div class="col-md-11 offset-md-1">
    <h4 class="heading"> List of Articles</h4> 
      <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Title</th>
              <th colspan="2"=>Description</th>
              <th scope="col"=>Edit</th>
              <th scope="col"=>Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @articles.each do |article| %>
                <td><%= article.updated_at%></td>
                <td><%= article.title %></td>
                <td><%= article.text.truncate(40) %></td>
                <td><%= link_to 'Read more', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article) if @current_tutor.admin? %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } if @current_tutor.admin? %></td>
                </tr>
          <% end %>
        </table>
      <%= link_to 'Add a new article', new_article_path %>
  </div>
</div>


