
<div class="row">
  <div class="col-md-11 offset-md-1"><td>
    <h4 class="heading"> Our Tutors</h4> 
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Year</th>
                <th scope="col">Subject</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% @tutors.each do |tutor| %>
                    <td><%= link_to tutor.name, tutor %></td> 
                    <td><%= tutor.email %></td>
                    <td><%= tutor.stage %></td>
                    <td><%= tutor.subject %></td>
                    <td><%= link_to 'Edit', edit_tutor_path(tutor) %></td>
                    <td><%= link_to 'Delete', tutor_path(tutor), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } if @current_tutor.admin? %></td>  
              </tr>
            <% end %>
          </table>
      </div>
    </div>  