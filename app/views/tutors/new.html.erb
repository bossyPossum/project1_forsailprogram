<h1>Sign Up Form For New Tutors</h1>

<% if @tutor.errors.any? %>
  <ol>
    <% @tutor.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @tutor do |f| %>
  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email, :required => true, :autofocus => true %>
  </fieldset>

  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>
  </fieldset>

  <fieldset>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
  </fieldset>

  <%= form.check_box :admin %>

  <%= f.submit "Sign up now!" %>
<% end %>
