
<h1> List of Programs</h1> 

<%= link_to 'Add a new Program', new_program_path %>

<table>
  <tr>
   
        <th>Date</th>
        <th>Title</th>
        <th>Description</th>
     
  </tr>
 
  
    <tr>
    <% @programs.each do |program| %>
        <td><%= program.updated_at%></td>
        <td><%= program.stage %></td>
        <td><%= program.subject %></td>
        <td><%= link_to 'Edit', edit_program_path(program) if @current_tutor.admin? %></td>
        <td><%= link_to 'Delete', program_path(program), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } if @current_tutor.admin? %></td>
        </tr>
  <% end %>
</table>


