<div class="row">
  <div class="col-md-11 offset-md-1">
    <h4 class="heading"> List of Programs</h4> 

    <p><%= flash[:notice]%> </p>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Subjects</th>
            <th scope="col">Key Learning Areas</th>
            <th scope="col"=>Edit</th>
            <th scope="col"=>Delete</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @programs.each do |program| %>
              <td><%= program.subject %></td>
              <td><%= program.kla %></td>
              <td><%= link_to 'Edit', edit_program_path(program) %></td>
              <td><%= link_to 'Delete', program_path(program), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }%></td>  
          </tr>
        </tbody>
        <% end %>
      </table>
    <%= link_to 'Add a new Program', new_program_path %>
  </div>
</div>

