<%= form_for @program do |f| %>
 
    <% if @program.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@program.errors.count, "error") %> prohibited
          this program from being saved:
        </h2>
        <ul>
          <% @program.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %> 

    <div class="form-group">   
      <%= f.label :stage %><br>
      <%= f.text_field :stage, :class => 'form-control' %>
    </div>
   
    <div class="form-group">   
      <%= f.label :subject %><br>
      <%= f.text_area :subject, :class => 'form-control' %>
    </div>
   
    <p>
      <%= f.submit :class => "btn btn-secondary" %>
    </p>
   
  <% end %>
  